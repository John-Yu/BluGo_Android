<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rule"
                android:id="@+id/textView"
                android:layout_column="6"/>

            <Spinner
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:id="@+id/sp_rule"
                android:layout_column="7"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/komi"
                android:id="@+id/textView2"
                android:layout_column="6"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/num_komi"
                android:layout_column="7"
                android:autofillHints="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:id="@+id/textView3"
                android:layout_column="6"/>

            <Spinner
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:id="@+id/sp_board_size"
                android:layout_column="7"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/handicap"
                android:id="@+id/textView5"
                android:layout_column="6"/>

            <Spinner
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:id="@+id/sp_handicap"
                android:layout_column="7"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:text="@string/tvBLACK" />

            <Spinner
                android:id="@+id/sp_black"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_column="7" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:text="@string/tvWHITE" />

            <Spinner
                android:id="@+id/sp_white"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_column="7" />
        </TableRow>

    </TableLayout>
</RelativeLayout>
