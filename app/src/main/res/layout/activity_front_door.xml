<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".FrontDoorActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:text="@string/review_game"
            android:id="@+id/button10"
            android:onClick="load_SGF"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:text="@string/single_game"
            android:id="@+id/button7"
            android:onClick="start_single_game"
            android:layout_below="@+id/button10"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:text="@string/enable_discover"
            android:id="@+id/button16"
            android:layout_below="@+id/button8"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:onClick="enable_discover"/>

        <Button
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:text="@string/wait_game_request"
            android:id="@+id/button8"
            android:onClick="wait_game_request"
            android:layout_below="@+id/button7"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:text="@string/request_game"
            android:id="@+id/button9"
            android:onClick="request_play"
            android:layout_below="@+id/button16"
            android:layout_alignRight="@+id/button10"
            android:layout_alignEnd="@+id/button10"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
