<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.blugo.GoBoardActivity"
    android:background="#000000"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn: white, wd: 20, bd: 30"
            android:id="@+id/text_info"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"/>
    </LinearLayout>

    <com.example.user.blugo.GoBoardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:id="@+id/go_board_view"
        app:exampleDrawable="@drawable/board"
        app:exampleString="Hello, GoBoardView"
        android:layout_weight="1.12"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            android:id="@+id/button3"
            android:onClick="undo"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pass"
            android:id="@+id/button6"
            android:onClick="pass"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save SGF"
            android:id="@+id/button4"
	    android:onClick="save_SGF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load SGF"
            android:id="@+id/button5"
	    android:onClick="load_SGF"/>

    </LinearLayout>

</LinearLayout>
